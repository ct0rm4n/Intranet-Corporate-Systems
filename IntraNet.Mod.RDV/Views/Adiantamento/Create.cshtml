@model IntraNet.Mod.RDV.Models.ViewModel.AdiantamentoViewModel
@{ 
    ViewBag.Title = "Create";
    Layout = null;
}
@using (Ajax.BeginForm("InserirAvatar", "Manage", new AjaxOptions { OnBegin = "", OnFailure = "" }, new { id = "Create" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h2><i class="glyphicon glyphicon-plus"></i>&nbsp; Adiantamento.</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="result"></div>
        
        <div class="form-group">
            <div class="col-md-12">
                @Html.HiddenFor(model => model.UserId, new { @class = "form-control", @Value = ViewBag.iduser })
                @Html.HiddenFor(model => model.AprovadorId, new { @class = "form-control", @Value = ViewBag.AprovadorId })
                @Html.HiddenFor(model => model.Situacao, new { @class = "form-control", @Value = "Pendente Aprovacao" })
                @Html.HiddenFor(model => model.SolicitadoEm, new { @class = "form-control", @Value = ViewBag.SolicitadoEm })
                @Html.HiddenFor(model => model.EmpresaId, new { @class = "form-control", @Value = ViewBag.EmpresaId })
                @Html.HiddenFor(model => model.SolicitaEmpresaId, new { @class = "form-control", @Value = ViewBag.SolicitaEmpresaId })
            </div>
            <div class="row col-md-12">
                @Html.LabelFor(model => model.DataPrevista, "Previsão de Viagem:", htmlAttributes: new { @class = "control-label col-md-3 LabelLeft" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DataPrevista, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br/>
            <div class="row col-md-12">
                @Html.LabelFor(model => model.Situacao, "Valor:", htmlAttributes: new { @class = "control-label col-md-3 LabelLeft" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.AdiantamentoValor, new { htmlAttributes = new { @class = "form-control", @onkeypress = "MascarasR()" } })
                </div>
            </div>
            <br/>
            <div class="row col-lg-12">
                @Html.LabelFor(model => model.DadosBancariosId, "Conta para deposito:", htmlAttributes: new { @class = "control-label col-md-3 LabelLeft" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.DadosBancariosId, null, "Selecione", new { @class = "form-control" })
                </div> 
            </div>            
        </div>

    </div>
}
<div class="row col-md-12" align="right">
    <button onclick="CreateAdiantamento()" class="btn btn-default">
        <i class="glyphicon glyphicon-ok-sign"></i>&nbsp; Salvar
    </button>
    <button class="btn btn-default" onclick="$('#myModal').modal('hide')">
        <i class="glyphicon glyphicon-remove-circle">&nbsp;</i>Cancelar
    </button>
</div>    
   

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
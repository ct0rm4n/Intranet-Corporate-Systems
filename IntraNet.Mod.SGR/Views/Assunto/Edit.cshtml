@model IntraNet.Mod.SGR.Models.ViewModel.AssuntoViewModel
@{
    Layout = null;
}
<div>
    @using (Ajax.BeginForm("EditAssunto", "Assunto", new AjaxOptions { OnBegin = "", OnFailure = "" }, new { id = "EditAssunto" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <h4><i class="fa fa-pencil">&nbsp;</i>Editar Assunto</h4>
        <hr />
        <div class="form-horizontal">
            <div>
                <div id="result"></div>
                <div class="row col-lg-12" align="left" style="display:none">

                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.Situacao, "Situação:", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-12">
                            @Html.Editor("Situacao", new { htmlAttributes = new { @class = "form-control", @Value = "Aberto" } })
                            @Html.Editor("AssuntoId", new { htmlAttributes = new { @class = "form-control"} })
                            @Html.Editor("InseridoEm")
                            @Html.Editor("QuemInseriu", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.Editor("Delete", new { htmlAttributes = new { @class = "form-control", @Value = 0 } })
                            @Html.Editor("ReuniaoId", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div align="left" class="col-lg-12 row">

                    <div class="col-lg-12">
                        @Html.LabelFor(model => model.DescricaoAs, "Descrição:", htmlAttributes: new { @class = "col-md-3" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.DescricaoAs, htmlAttributes: new { @class = "form-control", rows = 3, style = "width:400px" })
                        </div>

                    </div>



                </div>
            </div>
        </div>

    }
    <hr />
    <div class="row col-lg-12" align="right">
        <button class="btn btn-default btnReuniao" onclick="AlterarAssunto()">
            <i class="fa fa-lg fa-fw fa-floppy-o"></i>&nbsp; Salvar
        </button>

        <button class="btn btn-default btnReuniao" onclick="$('#myModal').modal('hide');">
            <i class="fa fa-lg fa-fw fa-ban"></i>&nbsp; Cancelar
        </button>
    </div>


</div>
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
}
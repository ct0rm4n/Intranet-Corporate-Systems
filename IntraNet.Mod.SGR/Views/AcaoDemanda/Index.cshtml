@model IEnumerable<IntraNet.Mod.SGR.Models.ViewModel.AcaoDemandaViewModel>
@{
Layout = null;
if (Model.Count() > 0)
{
    <h5 align="center"><i class="fa fa-list-alt">&nbsp;</i>Checklist das Ações:&nbsp;<i class="fa fa-check"></i></h5>
    <div class="table">
        <div class="header col-lg-12 row">
            <div class="col-lg-2">
                @Html.Label("Feito")
            </div>

            <div class="col-lg-5">
                @Html.Label("Descrição:")
            </div>
            <div class="col-lg-4">
                @Html.Label("Data:")
            </div>

            <div class="col-lg-1"></div>
        </div>

        @foreach (var item in Model)
        {
        <div class="col-lg-12 row">
            <div class="col-lg-2">
                @Html.DisplayFor(modelItem => item.Feito)
            </div>

            <div class="col-lg-5">
                @Html.DisplayFor(modelItem => item.Descricao)
            </div>
            <div class="col-lg-4">
                @Html.DisplayFor(modelItem => item.Data)
            </div>

            <div  class="col-lg-1">
                
                <div class="btn btn-default btnReuniaoAddAcao" onclick="alert(" ..")"><i class="fa fa-fw fa-trash-o"></i>&nbsp;</div>
            </div>
        </div>
        }

    </div>

}

}
